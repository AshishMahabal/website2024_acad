%/size { 150 } def
/dir { 1 } def
/a { red size 0 rlineto } def

/b { 
blue 
size 4 div 0 rlineto 
45 rotate size 4 2 sqrt mul div 0 rlineto 
-90 rotate   size 2 2 sqrt mul div  0 rlineto 
90 rotate   size 4 2 sqrt mul div  0 rlineto 
-45 rotate   size 4 div 0 rlineto 
} def

/c { green
size 4 div 0 rlineto 
-45 rotate size 4 2 sqrt mul div 0 rlineto 
90 rotate   size 2 2 sqrt mul div  0 rlineto 
-90 rotate   size 4 2 sqrt mul div  0 rlineto 
45 rotate   size 4 div 0 rlineto 
} def

/d { yellow
15 rotate   size  3 sqrt  5.6 div mul 0 rlineto
-37 rotate   size  3 sqrt  4 div mul 0 rlineto
37 rotate  size 3 sqrt 5.6 div mul 0 rlineto 
-15 rotate
} def

/mid { 150 rotate size 3 sqrt 3 div mul 0 rlineto 
60 rotate size 3 sqrt 3 div mul 0 rlineto 150 rotate } def
%/a2 { a mid a } def
%/b2 { b mid b } def
%/c2 { c mid c } def
%/d2 { d mid d } def
/red { 1 0 0 setrgbcolor } def
